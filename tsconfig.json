{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./types",
      "./node_modules/@types",
    ],
    "sourceMap": true,
  },
  "exclude": [
    "**/*.ignore.*",
    "./node_modules/",
    "./dist/",
    "./build/"
  ],
  "ts-node": {
    "files" : true
  }
}